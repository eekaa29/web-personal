{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "maxDuration": 10,
      "excludeFiles": "{tests/**,__tests__/**,**/*.test.py,**/test_*.py,fixtures/**,__fixtures__/**,assets/**}"
    }
  },
  "installCommand": "",
  "buildCommand": "uv run python manage.py tailwind install && uv run python manage.py tailwind build && uv run python manage.py collectstatic --noinput",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ]
}
