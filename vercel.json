{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "maxDuration": 10,
      "excludeFiles": "{tests/**,__tests__/**,**/*.test.py,**/test_*.py,fixtures/**,__fixtures__/**,static/**,assets/**}"
    }
  },
  "installCommand": "python -m pip install -r requirements.txt",
  "buildCommand": "python manage.py tailwind build && python manage.py collectstatic --noinput",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ]
}
